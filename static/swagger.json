{
    "openapi": "3.0.0",
    "info": {
      "title": "My Flask API",
      "version": "1.0.0",
      "description": "Documentation de l'API pour la gestion des utilisateurs et des posts. Cette API permet de créer, lire, mettre à jour et supprimer des utilisateurs et des posts."
    },
    "servers": [
      {
        "url": "http://localhost:5000"
      }
    ],
    "paths": {
      "/": {
        "get": {
          "summary": "Page d'accueil",
          "description": "Retourne un message de bienvenue pour les utilisateurs de l'API.",
          "responses": {
            "200": {
              "description": "Message de bienvenue",
              "content": {
                "text/plain": {
                  "schema": {
                    "type": "string"
                  }
                }
              }
            }
          }
        }
      },
      "/users": {
        "post": {
          "summary": "Créer un utilisateur",
          "description": "Créer un nouvel utilisateur. Les informations de l'utilisateur doivent être fournies dans le corps de la requête.",
          "requestBody": {
            "required": true,
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "username": {
                      "type": "string",
                      "description": "Le nom d'utilisateur unique de l'utilisateur."
                    },
                    "password": {
                      "type": "string",
                      "description": "Le mot de passe de l'utilisateur."
                    },
                    "email": {
                      "type": "string",
                      "description": "L'adresse email de l'utilisateur."
                    }
                  },
                  "required": ["username", "password", "email"]
                }
              }
            },
            "responses": {
              "201": {
                "description": "Utilisateur créé",
                "content": {
                  "application/json": {
                    "schema": {
                      "$ref": "#/components/schemas/User"
                    }
                  }
                }
              }
            }
          }
        },
        "get": {
          "summary": "Récupérer tous les utilisateurs",
          "description": "Retourne une liste de tous les utilisateurs enregistrés dans la base de données.",
          "responses": {
            "200": {
              "description": "Liste des utilisateurs",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "array",
                    "items": {
                      "$ref": "#/components/schemas/User"
                    }
                  }
                }
              }
            }
          }
        }
      },
      "/posts": {
        "post": {
          "summary": "Créer un post",
          "description": "Créer un nouveau post. Les informations du post doivent être fournies dans le corps de la requête.",
          "requestBody": {
            "required": true,
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "title": {
                      "type": "string",
                      "description": "Le titre du post."
                    },
                    "content": {
                      "type": "string",
                      "description": "Le contenu du post."
                    },
                    "user_id": {
                      "type": "integer",
                      "description": "L'ID de l'utilisateur qui a créé le post."
                    }
                  },
                  "required": ["title", "content", "user_id"]
                }
              }
            },
            "responses": {
              "201": {
                "description": "Post créé",
                "content": {
                  "application/json": {
                    "schema": {
                      "$ref": "#/components/schemas/Post"
                    }
                  }
                }
              }
            }
          },
          "get": {
            "summary": "Récupérer tous les posts",
            "description": "Retourne une liste de tous les posts créés par les utilisateurs.",
            "responses": {
              "200": {
                "description": "Liste des posts",
                "content": {
                  "application/json": {
                    "schema": {
                      "type": "array",
                      "items": {
                        "$ref": "#/components/schemas/Post"
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "components": {
      "schemas": {
        "User": {
          "type": "object",
          "properties": {
            "id": {
              "type": "integer",
              "description": "L'ID unique de l'utilisateur."
            },
            "username": {
              "type": "string",
              "description": "Le nom d'utilisateur de l'utilisateur."
            },
            "email": {
              "type": "string",
              "description": "L'adresse email de l'utilisateur."
            }
          }
        },
        "Post": {
          "type": "object",
          "properties": {
            "id": {
              "type": "integer",
              "description": "L'ID unique du post."
            },
            "title": {
              "type": "string",
              "description": "Le titre du post."
            },
            "content": {
              "type": "string",
              "description": "Le contenu du post."
            },
            "user_id": {
              "type": "integer",
              "description": "L'ID de l'utilisateur qui a créé le post."
            }
          }
        }
      }
    }
  }
  